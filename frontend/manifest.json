{
  "$schema": "https://www.schemastore.org/chrome-manifest",
  "name": "Github-AI-Navigator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Repository Analyser"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "omnibox": {
    "keyword": "github"
  }
}
