{
  "$schema": "https://www.schemastore.org/chrome-manifest",
  "name": "Github-AI-Navigator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Repository Analyser"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "omnibox": {
    "keyword": "github"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' https://cdnjs.cloudflare.com; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css",
        "*.html"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}
